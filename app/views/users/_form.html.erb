<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= simple_form_for @user, html: { id: 'user-form'} do |f|%>
        <div class="card-body">    
          <div class="row" >
            <div class="col-md-12">
              <div class="form-group">
                <%= 
                f.input( :name,
                  as: :string,
                  required: true,
                  label: 'Nome de usuÃ¡rio',                    
                  input_html: { 
                    class: "form-control" 
                  } 
                )
                %>
              </div>
            </div>      
          </div>
          <div class="row" >
            <div class="col-md-12">
              <div class="form-group">
                <%= 
                f.input( :email,
                  as: :string,
                  required: true,
                  label: 'E-mail',
                  input_html: { 
                    class: "form-control" 
                  } 
                )
                %>
              </div>
            </div>      
          </div>
          <div class="row" >
            <div class="col-md-6">
              <div class="form-group">
                <%= 
                f.input( :password,
                  as: :string,
                  required: true,
                  label: 'Senha',
                  input_html: { 
                    class: "form-control" 
                  } 
                )
                %>
              </div>
            </div>            
          </div>          
          <div class="row" >
            <div class="col-md-6">
              <div class="form-group">
                <%=
                f.button( :submit,
                  class: "btn btn-outline-info"                      
                )
                %>
                <%= link_to 'Cancelar', users_path, class: "btn btn-outline-danger" %>
              </div>
            </div>
          </div>         
        </div>
      <% end %>
    </div>
  </div>
</div>